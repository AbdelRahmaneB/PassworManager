<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_signIn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top">

        <ImageView
            android:id="@+id/app_logo_signUp1"
            android:layout_width="200dp"
            android:contentDescription="@string/app_name"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:src="@drawable/app_logo" />

        <!--*************************************************************************-->

        <ImageView
            android:id="@+id/iv_user_login"
            android:layout_width="30dip"
            android:layout_height="40dip"
            android:layout_below="@+id/app_logo_signUp1"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/l_username_login"
            android:layout_toStartOf="@+id/l_username_login"
            android:src="@drawable/ic_account" />

        <TextView
            android:id="@+id/l_username_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_logo_signUp1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/hint_log"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/background_dark" />


        <View
            android:id="@+id/pi_separator1_login"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignEnd="@+id/l_username_login"
            android:layout_alignLeft="@+id/l_username_login"
            android:layout_alignRight="@+id/l_username_login"
            android:layout_alignStart="@+id/l_username_login"
            android:layout_below="@+id/l_username_login"
            android:layout_marginBottom="10dp"
            android:background="@color/Gray_separator" />


        <!--*************************************************************************-->


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_pwd_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pi_separator1_login"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/t_password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_username_signin"
                android:hint="@string/hint_password"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>


        <!--*************************************************************************-->

        <Button
            android:id="@+id/bt__login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/input_pwd_login"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/button_log_in"
            android:theme="@style/MyButton" />

        <TextView
            android:id="@+id/l_forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/bt__login"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:text="@string/button_forgot_pass"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPrimary" />


    </RelativeLayout>

</ScrollView>