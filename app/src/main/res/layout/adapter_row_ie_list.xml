<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/l_ie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/ie_title1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/l_ie_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/l_ie_title"
        android:layout_alignStart="@+id/l_ie_title"
        android:layout_below="@+id/l_ie_title"
        android:paddingBottom="5dp"
        android:text="@string/ie_title1_desc"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>