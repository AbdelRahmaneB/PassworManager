<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myScroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_dialog_add_edit"
                android:layout_width="30dip"
                android:layout_height="40dip"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/about_app_title"
                android:src="@drawable/ic_delete_white" />

            <TextView
                android:id="@+id/label_Dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/ic_dialog_add_edit"
                android:layout_toRightOf="@+id/ic_dialog_add_edit"
                android:text="@string/home_add_edit_DTitle"
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                android:textSize="20sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/label_Warning_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:text="@string/home_add_edit_DMessage"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/label_account_to_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/label_Warning_delete"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/label_delete_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/label_account_to_delete"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:text="@string/home_add_edit_DMessage_suite"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="18sp" />



    </RelativeLayout>
</ScrollView>